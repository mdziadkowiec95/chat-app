{
  "name": "socket-communicator-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "dependencies": {
    "express": "^4.17.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.0",
    "concurrently": "^5.3.0",
    "esm": "^3.2.25",
    "husky": "^4.2.5",
    "mocha": "^8.1.2",
    "nodemon": "^2.0.4"
  },
  "scripts": {
    "start": "webpack --config ./webpack.config.js --watch",
    "server": "nodemon --exec babel-node ./server/app.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dev-debug": "nodemon --inspect --exec babel-node ./server/server-dev.js --ignore client",
    "build": "webpack --mode production",
    "test": "mocha --require esm",
    "test-server": "mocha ./server/tests --require esm"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mdziadkowiec95/chat-app.git"
  },
